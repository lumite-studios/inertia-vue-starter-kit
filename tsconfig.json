{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components": [
                "resources/views/components"
            ],
            "@js/*": [
                "resources/js/*"
            ],
            "@layouts/*": [
                "resources/views/layouts/*"
            ],
            "@pages/*": [
                "resources/views/pages/*"
            ],
            "@types/*": [
                "resources/js/types/*"
            ],
        },
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue"
    ]
}
